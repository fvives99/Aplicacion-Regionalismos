<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <TextView
        android:id="@+id/txpaismapa"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Pais"
        android:textSize="15sp"

        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/txpalabramapa"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:text="Palabra"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/txpaismapa"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txsignificadomapa"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:text="Significado"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/txpalabramapa"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>