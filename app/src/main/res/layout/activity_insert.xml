<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".Insert">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RegionAPP"
        android:textSize="60sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/MOTD"
        android:layout_width="362dp"
        android:layout_height="38dp"
        android:gravity="center_horizontal"
        android:text="La Mejor aplicacion de regionalismos"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/banner" />


    <EditText
        android:id="@+id/escribirpalabra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la palabra"
        android:textStyle="italic"

        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/escribirsignificado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el significado"
        android:textStyle="italic"

        android:layout_marginTop="20dp"/>

    <Spinner

        android:id="@+id/spinnerpaises"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:spinnerMode="dialog"
        android:entries="@array/paises"
        android:fontFamily="sans-serif-black" />

    <Button
        android:id="@+id/ingresarpalabra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF0000"
        android:text="Ingresar Palabra"
        android:textStyle="bold"


        />

    <Button
        android:id="@+id/listarpalabras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF0000"
        android:text="BUSCAR PALABRA"
        android:textStyle="bold"


        />

    <Button
        android:id="@+id/btnLogout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF0000"
        android:text="CERRAR SESION"
        android:textStyle="bold"


        />

</LinearLayout>

